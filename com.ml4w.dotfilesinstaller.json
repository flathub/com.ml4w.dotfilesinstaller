{
    "id": "com.ml4w.dotfilesinstaller",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "dotfiles-installer",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "git",
            "make-args": [
                "NO_TCLTK=1",
                "INSTALL_SYMLINKS=1"
            ],
            "make-install-args": [
                "NO_TCLTK=1",
                "INSTALL_SYMLINKS=1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://mirrors.edge.kernel.org/pub/software/scm/git/git-2.51.0.tar.xz",
                    "sha256": "60a7c2251cc2e588d5cd87bae567260617c6de0c22dca9cdbfc4c7d2b8990b62",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 5350,
                        "stable-only": true,
                        "url-template": "https://mirrors.edge.kernel.org/pub/software/scm/git/git-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "dotfiles-installer",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mylinuxforwork/dotfiles-installer",
                    "tag": "0.9.6"
                }
            ]
        }
    ]
}
